/* pages/search/search.wxss */

.search-box {
  display: flex;
  justify-content: flex-start;
}

input {
  border: 1px solid rgba(206, 202, 196, 0.952);
  width: 60%;
  height: 50rpx;
  border-radius: 25rpx;
  margin-left: 30rpx;
  padding-left: 30rpx;
}

.search-button {
  /* width: 100rpx; */
  font-size: 12px;
  margin-left: 20rpx;
  background-color: #e93b3d;
  color: white;
}

/* product */

.search_block {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.search_product {
  width: 320rpx;
  border: 1px solid #5c5a5aaf;
}

.search_pic {
  width: 320rpx;
}

.search_product .introduce {
  overflow: hidden;
  display: -webkit-box; /*自适应盒子*/
  -webkit-line-clamp: 2; /*此处为1行,如果是两行就改成2*/
  -webkit-box-orient: vertical;
}

.search_product .price {
  color: red;
  font-size: 16px;
}
