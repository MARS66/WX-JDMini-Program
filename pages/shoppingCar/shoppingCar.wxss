.list {
  width: 100%;
  height: 100vh;
}

.clearfix {
  height: 240rpx;
  margin: 20rpx 0 15px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods_outer {
  box-sizing: border-box;
  width: 600rpx;
  height: 240rpx;
  padding: 20rpx;
  margin-right: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 0px solid rgb(173, 168, 168);
  box-shadow: -2px 0 3px -1px rgb(173, 168, 168),
                0 0 0 0 rgb(173, 168, 168),
                0 2px 3px -1px rgb(173, 168, 168),
                2px 0 3px -1px rgb(173, 168, 168);
  border-radius: 6px;
}

.img {
  height: 200rpx;
}

.img image {
  width: 150rpx;
  height: 180rpx;
  border: 2px solid rgb(173, 168, 168);
  border-radius: 6px;
}

.check {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  border: 2px solid #eaeaea;
  border-radius: 50%; 
}

.right {
  height: 200rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.ellipsis-2 {
  height: 100px;
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.fl {
  width: 40rpx;
  height: 40rpx;
  font-size: 20px;
  line-height: 40rpx;
  text-align: center;
  border: 1px solid #eaeaea;
}

.fl_num input {
  width: 40rpx;
  height: 40rpx;
  font-size: 14px;
  text-align: center;
  line-height: 40rpx;
    color: #FF0000;
  border: 1px solid #eaeaea;
}

.num_w {
  width: 200rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.bottom {
  width: 750rpx;
  height: 60rpx;
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
}

.price_fr {
  width: 400rpx;
  height: 40rpx;
  margin-right: 20rpx;
  color: #FF0000;
}
.price{
  color: #FF0000;
}
.selectAllStatus{
 width: 130rpx;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
 
}
.selectAllStatus text{
  height: 60rpx;
  line-height: 60rpx;
  color:  #FF0000;
  font-size: 18px;
  white-space: nowrap;
}
.active text{
  color:  black;
}
.gradientButton{
  height: 60rpx;
  width:160rpx;
  line-height: 60rpx;
}
.Buttonactive{
  height: 60rpx;
  width:160rpx;
  line-height: 60rpx;
  background-color: #FF0000;
}